  font-size: 24rpx;
  line-height: 40rpx;
  height: 40rpx;
  border-radius: 10rpx;
  padding: 0 10rpx;
  margin: 10rpx;
}
/* 选择器-元素 */
.choice-item-active {
  color: var(--main);
}