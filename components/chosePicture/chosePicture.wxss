:host {
  display: block;
  width: 200rpx;
  height: 200rpx;
}

/* 选择 */
.chouse {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
/* 选择-添加 */
.chouse-increase {
  border: 2rpx dashed #CCC;
}
.chouse-increase .chouse-image {
  max-width: 200rpx;
  max-height: 200rpx;
  width: 50%;
  height: 50%;
}

