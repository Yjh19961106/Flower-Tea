:host {
  display: block;
  height: 100%;
}
.custom-scroll {
  height: 100%;
}
.container {
  min-height: 100%;
  overflow: auto;
  background-color: #F2F2F2;
}
/* 优惠券-列表 */
.coupon-list {
  padding: 10rpx 0;
}
/* 优惠券-元素 */
.coupon-item {
  margin: 40rpx auto;
  height: 175rpx;
  width: 650rpx;
  position: relative;
}
/* 优惠券-禁用 */
.coupon-item-disabled {
  pointer-events: none;
  color: #CCC;
}
/* 优惠券-背景 */
.coupon-item-background {
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: 1;
  top: 0;
  left: 0;
}
/* 优惠券-前景 */
.coupon-item-foreground {
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: 2;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
}

/* 优惠券-元素-抵价 */
.coupon-item-deduction {
  width: 170rpx;
  height: 120rpx;
  display: flex;
  /* height: ; */
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 优惠券-元素-抵价-价格 */
.coupon-item-deduction-price {
  font-style: italic;
  font-size: 48rpx;
  font-weight: bold;
}
.coupon-item-deduction-price::before {
  content: '¥';
  font-size: 28rpx;
}
/* 优惠券-元素-抵价-标题 */
.coupon-item-deduction-title {
  font-size: 24rpx;
}

/* 优惠券-元素-详情 */
.coupon-item-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 优惠券-元素-详情-条件 */
.coupon-item-detail-condition {
  font-size: 32rpx;
  font-weight: bold;
  font-style: italic;
}
/* 优惠券-元素-详情-说明 */
.coupon-item-detail-explain {
  font-size: 24rpx;
}

/* 优惠券-元素-进入 */
.coupon-item-enter {
  font-size: 32rpx;
  width: 150rpx;
  height: 170rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #FFF;
}