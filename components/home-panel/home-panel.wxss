:host {
  display: block;
  overflow: auto;
}

/* 装饰-线 */
.home-panel-line {
	width: 6rpx;
	height: 30rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  background-color: var(--main);
}
/* 装饰-圆点 */
.home-panel-circular {
	width: 30rpx;
	height: 30rpx;
  border-radius: 50%;
  background-color: var(--main);
  position: absolute;
  top: 0;
  right: -10rpx;
  bottom: 0;
  margin: auto;
  opacity: 0.4;
  z-index: 1;
}
/* 顶部 */
.home-panel-header {
  position: relative;
  display: flex;
  align-items: center;
  height: 80rpx;
  justify-content: space-between;
}
/* 标题 */
.home-panel-title {
  margin-left: 20rpx;
	font-size: 28rpx;
  position: relative;
}
.home-panel-title-content {
  position: relative;
  z-index: 2
}
/* 更多 */
.home-panel-more {
  color: #999;
  font-size: 24rpx;
  padding: 0 20rpx;
}

