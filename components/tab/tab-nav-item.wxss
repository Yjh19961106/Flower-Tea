:host {
  flex: 1 0;
  text-align: center;
  font-size: inherit;
  height: 100%;
  display: flex;
  flex-direction: column;
  white-space: nowrap;
  padding-right: 20rpx;
  padding-left: 20rpx;
}
/* 列表元素 */
.tab-nav-item-inner {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 列表元素-选中 */
.tab-nav-item-inner.tab-nav-active {
  color: var(--main);
}
/* 下划线 */
.tab-nav-underline {
  height: 2rpx;
  width: 100%;
  margin: auto;
  background-color: var(--main);
  visibility: hidden;
}
/* 下划线-选中 */
.tab-nav-underline.tab-nav-active {
  visibility: visible;
}