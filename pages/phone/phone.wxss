#container {
  min-height: 100vh;
  background-color: #F2F2F2;
}
/* 顶部 */
.header {
  padding: 40rpx 0;
  background-color: #FFF;
}
/* 图标 */
.header-logo {
  width: 200rpx;
  height: 200rpx;
  margin: auto;
}
/* 标题 */
.header-title {
  text-align: center;
  line-height: 40rpx;
  padding: 20rpx;
}

/* 授权 */
.auth {
  margin: 20rpx;
}
/* 授权-标题 */
.auth-title {
  font-size: 28rpx;
  font-weight: bold;
  margin: 20rpx 0;
}
/* 授权-列表 */
.auth-list {
  font-size: 24rpx;
  margin: 20rpx 0;
  padding-left: 20rpx;
}
/* 授权-项目 */
.auth-item {
  display: list-item;
  list-style-type: disc;
  list-style-position: inside;
  color: #999;
}

/* 按钮 */
.button {
  margin: 100rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.button custom-image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}