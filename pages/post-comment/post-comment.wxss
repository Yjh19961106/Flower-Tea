/* 顶部 */
.header {
  display: flex;
  align-items: center;
}
/* 商品-封面 */
.goods-cover {
  width: 130rpx;
  height: 130rpx;
  margin: 20rpx;
}
/* 评分 */
.score {
  flex: 1;
  font-size: 24rpx;
}

/* 评论 */
.comment {
  padding: 40rpx;
  height: 300rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 24rpx;
  background-color: #F2F2F2;
}

/* 图片-列表 */
.pictrue-list {
  padding: 10rpx;
}

/* 提交按钮 */
.submit-button {
  width: 600rpx;
  margin: 60rpx auto;
}