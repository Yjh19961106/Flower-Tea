<form bindsubmit='submit'>
  <!-- 搜索 -->
  <view class='search-container'>
    <!-- 搜索-输入 -->
    <input class='search-input' name='keyword' type='text' placeholder='请输入商品名称'></input>
    <!-- 搜索-按钮 -->
    <button form-type='submit' class='button-clear search-button'>搜索</button>
  </view>
</form>

<!-- 搜索-列表 -->
<search-list id='search-list' keyword='{{keyword}}' wx:if='{{keyword}}' />