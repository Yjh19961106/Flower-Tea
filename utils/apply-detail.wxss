
/* 商品 */
.goods {
  font-size: 32rpx;
  background-color: #FFF
}
/* 商品-轮播 */
.goods-swiper {
  height: 400rpx;
}
.goods-swiper custom-image {
  width: 100%;
  height: 100%;
}
/* 商品-价格 */
.goods-price {
  margin: 20rpx;
  line-height: 40rpx;
}
/* 商品-标题 */
.goods-title {
  margin: 20rpx;
  line-height: 40rpx;
}
/* 商品-描述 */
.goods-intro {
  margin: 20rpx;
  font-size: 28rpx;
  line-height: 34rpx;
  min-height: 34rpx;
  color: #999;
}



/* 申请-详情 */
.apply-detail {
  margin-top: 10rpx;
  background-color: #FFF;
  display: flex;
  align-items: center;
}
.apply-detail table {
  border-collapse: collapse;
  table-layout: automatic;
  flex: 1;
}
.apply-detail td {
  border-top: 2rpx solid #F2F2F2;
  border-bottom: 2rpx solid #F2F2F2;
  height: 80rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  vertical-align: middle;
  padding: 20rpx;
  line-height: 40rpx;
}
.apply-detail td:first-of-type {
  width: 180rpx;
  text-align: center;
}


/* 统计 */
count {
  float: right;
}
/* 价格 */
.price-normal {
  
}
.price-normal::before {
  content: '¥'
}
.price {
  color: var(--main);
}
.price::before {
  content: '¥'
}



/* 购物车-打开 */
.cart-open {
  width: initial;
  margin: 40rpx;
}

/* 购物车-表格 */
.cart-table {
  width: 100%;
  border-collapse: collapse;
}
.cart-table caption {
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
}
.cart-table td:first-of-type {
  text-align: right;
  width: 200rpx;
}
.cart-table td {
  line-height: 80rpx;
  border-top: 2rpx solid #F2F2F2;
  border-bottom: 2rpx solid #F2F2F2;
}

/* 购物车-凭证 */
.cart-voucher {
}
/* 购物车-凭证-标题 */
.cart-voucher-title {
  text-align: center;
  line-height: 80rpx;
}
/* 购物车-凭证-选择 */
.cart-voucher-chose {
  margin: auto;
  width: 250rpx;
  height: 370rpx;
}

/* 购物车-结算 */
.cart-button {
  --height: 90rpx;
  width: 600rpx;
  height: var(--height);
  border-radius: calc(var(--height) / 2);
  margin: 30rpx auto;
}




/* 地址 */
address {
  padding: 20rpx;
  background-color: #FFF;
  margin: 20rpx 0;
}